<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/bitOne"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitTwo"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitOne"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitThree"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitTwo"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitFour"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitThree"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitFive"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitFour"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitSix"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitFive"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitSeven"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitSix"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitEight"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitSeven"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitNine"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitEight"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <ImageView
        android:id="@+id/bitTen"
        android:layout_width="40dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/bitNine"
        android:layout_marginTop="50dp"
        android:src="@drawable/empty" />

    <Button
        android:id="@+id/nrzIButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bitOne"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="nrzIDO"
        android:text="NRZ-I" />

    <Button
        android:id="@+id/nrzLButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nrzIButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="nrzLDO"
        android:text="NRZ-L" />

    <Button
        android:id="@+id/nrzUniButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nrzLButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="nrzUniDO"
        android:text="NRZ-Uni" />

    <Button
        android:id="@+id/mlt3Button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nrzUniButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="mlt3DO"
        android:text="MLT-3" />

    <Button
        android:id="@+id/amiButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mlt3Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="amiDO"
        android:text="AMI" />

    <Button
        android:id="@+id/manButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/amiButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="manDO"
        android:text="MAN" />

    <Button
        android:id="@+id/dmanButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/manButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="dmanDO"
        android:text="D-Man" />

    <TextView
        android:id="@+id/bitText"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:layout_alignLeft="@id/bitOne"
        android:text="0000000000"
        android:textAlignment="center" />


</RelativeLayout>


